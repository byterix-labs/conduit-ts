{
  "name": "conduit-ts",
  "version": "0.1.0",
  "description": "TypeScript streaming library with StreamReader and StreamWriter classes",
  "module": "index.ts",
  "main": "index.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./index.ts",
      "types": "./index.ts"
    }
  },
  "files": [
    "index.ts",
    "src/",
    "example.ts"
  ],
  "scripts": {
    "build": "tsc --noEmit",
    "lint": "eslint src/ index.ts",
    "lint:fix": "eslint src/ index.ts --fix",
    "format": "prettier --write src/ index.ts",
    "typecheck": "tsc --noEmit",
    "test": "bun run example.ts",
    "example": "bun run example.ts"
  },
  "keywords": [
    "stream",
    "reader",
    "writer",
    "binary",
    "buffer",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "prettier": "^3.5.3",
    "typescript": "^5.7.3"
  },
  "peerDependencies": {
    "typescript": "^5.7.3"
  }
}
